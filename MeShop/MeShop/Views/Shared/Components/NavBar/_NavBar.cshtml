@model IEnumerable<Product_Category>

<div class="navbar-area">
    <div class="xton-responsive-nav">
        <div class="container">
        </div>
    </div>

    <div class="xton-nav">
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-light">
                <a class="navbar-brand" asp-area="" asp-controller="home" asp-action="index">
                    <img src="~/Assets/img/MeStoreLogo.png" class="main-logo" alt="logo" width="60%">
                </a>
                <div class="collapse navbar-collapse mean-menu">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="index" class="nav-link active">Trang chủ </a>

                        </li>

                        <li class="nav-item megamenu">
                            <a asp-controller="Products" asp-action="Index" asp-route-Category_Name="" class="nav-link">Sản phẩm <i class='bx bx-chevron-down'></i></a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <div class="container">
                                        <div class="row justify-content-center">
                                            <div class="col">
                                            </div>

                                            <div class="col">
                                                <h6 class="submenu-title">Theo sản phẩm</h6>

                                                <ul class="megamenu-submenu">
                                                    <li><a asp-controller="products" asp-action="index1" asp-route-Collection="newest">Sản phẩm mới nhất</a></li>
                                                    <li><a asp-controller="products" asp-action="index1" asp-route-Collection="popular">Sản phẩm phổ biến</a></li>
                                                    <li><a asp-controller="products" asp-action="index1" asp-route-Collection="best_seller">Bán chạy nhất</a></li>
                                                </ul>
                                            </div>

                                            <div class="col">
                                                <h6 class="submenu-title">Theo danh mục</h6>

                                                <ul class="megamenu-submenu">
                                                    <li class="nav-item"><a asp-controller="Products" asp-action="Index" asp-route-Category_Name="" class="nav-link">Tất cả sản phẩm</a></li>
                                                    @foreach (var item in Model)
                                                    {
                                                        <li class="nav-item"><a asp-controller="Products" asp-action="Index" asp-route-Category_Name="@item.Name" class="nav-link">@item.Name</a></li>
                                                    }
                                                </ul>
                                            </div>
                                            
                                            <div class="col">
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="about" asp-action="index" class="nav-link">Về chúng tôi</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="blogs" asp-action="index" class="nav-link">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="contact" asp-action="index" class="nav-link">Liên hệ</a>
                        </li>
                    </ul>

                    <div class="others-option">
                        <div class="option-item">
                                @if (User.Identity.IsAuthenticated)
                                {
                                <div class="cart-btn" data-bs-toggle="modal" data-bs-target="#sidebarModal">
                                        <span class="small">Hello, @User.Identity.Name</span>
                                        <a><i class='bx bxs-user-detail'></i></a>
                                </div>
                                   
                                }   
                                else
                                {
                                <div class="cart-btn">
                                    <a asp-controller="useraccount" asp-action="login"><i class='bx bx-user '></i></a>
                                </div>
                                }
                        </div>
                        <div class="option-item">
                            <div class="cart-btn">
                                <a asp-controller="carts" asp-action="index"><i class='bx bx-shopping-bag'></i><span id="cart-item-count">@ViewBag.CartItemCount</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>

