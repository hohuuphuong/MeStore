@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title-area">
    <div class="container">
        <div class="page-title-content">
            <h2>Liên hệ</h2>
        </div>
    </div>
</div>

<section class="contact-area pt-100 pb-50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-12">
                <div class="contact-info">
                    <h3>Thông tin liên hệ</h3>

                    <ul class="contact-list">
                        <li><i class='bx bx-map'></i> Địa chỉ: <a> Đống đa, Hà Nội</a></li>
                        <li><i class='bx bx-phone-call'></i> Điện thoại: <a href="tel:+84343428402">+84 343 428 402</a></li>
                        <li><i class='bx bx-envelope'></i> Email: <a href="mailto:hohuuphuong.contact@gmail.com">hohuuphuong.contact@gmail.com</a></li>
                    </ul>
                    <h3>Theo dõi chúng tôi:</h3>
                    <ul class="social">
                        <li><a href="https://www.facebook.com/" target="_blank"><i class='bx bxl-facebook'></i></a></li>
                        <li><a href="https://www.instagram.com/" target="_blank"><i class='bx bxl-instagram'></i></a></li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-7 col-md-12">
                <div class="contact-form">
                    <h3>Nhận thông tin mới nhất</h3>
                    <form id="contactForm">
                        <div class="row justify-content-center">
                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <label>Tên <span>*</span></label>
                                    <input type="text" name="name" id="name" class="form-control" required data-error="Please enter your name" placeholder="Tên của bạn">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-6">
                                <div class="form-group">
                                    <label>Email <span>*</span></label>
                                    <input type="email" name="email" id="email" class="form-control" required data-error="Please enter your email" placeholder="Địa chỉ Email của bạn">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>Số điện thoại <span>*</span></label>
                                    <input type="text" name="phone_number" id="phone_number" class="form-control" required data-error="Please enter your phone number" placeholder="Số điện thoại của bạn">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>Lời nhắn <span>*</span></label>
                                    <textarea name="message" id="message" cols="30" rows="5" required data-error="Please enter your message" class="form-control" placeholder="Lời nhắn của bạn..."></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12">
                                <button type="submit" class="default-btn">Gửi</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
