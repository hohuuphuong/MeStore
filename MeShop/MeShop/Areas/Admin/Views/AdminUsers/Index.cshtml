@model IEnumerable<MeShop.Models.AdminUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="py-3 d-flex align-items-sm-center flex-sm-row flex-column">
    <div class="flex-grow-1">
        <h4 class="fs-18 fw-semibold m-0">Danh sách tài khoản Admin</h4>
    </div>

    <div class="text-end">
        <ol class="breadcrumb m-0 py-0">
            <li class="breadcrumb-item"><a asp-area="admin" asp-controller="adminusers" asp-action="index">Admin</a></li>
            <li class="breadcrumb-item active">Danh sách tài khoản Admin</li>
        </ol>
    </div>
</div>


<div class="col-xl-10">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Tài Khoản</th>
                            <th scope="col">Mật Khẩu</th>
                            <th scope="col">Ngày sửa đổi</th>
                            <th scope="col">Ngày tạo</th>
                            <th scope="col">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Password</td>
                                <td>@item.Created_at</td>
                                <td>@item.Modified_at</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-1">
                                        <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-primary rounded-pill">Sửa</button></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger rounded-pill">Xóa</button></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


