@model MeShop.Models.AdminUser

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="py-3 d-flex align-items-sm-center flex-sm-row flex-column">
    <div class="flex-grow-1">
        <h4 class="fs-18 fw-semibold m-0">Thêm tài khoản Admin</h4>
    </div>

    <div class="text-end">
        <ol class="breadcrumb m-0 py-0">
            <li class="breadcrumb-item"><a asp-area="admin" asp-controller="adminusers" asp-action="index">Admin</a></li>
            <li class="breadcrumb-item active">Thêm tài khoản Admin</li>
        </ol>
    </div>
</div>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">
            <form asp-action="Create" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6">
                    <label for="validationDefault01" class="form-label">Tài khoản</label>
                    <input asp-for="Name" type="text" class="form-control" id="validationDefault01" required="">
                </div>
                <div class="col-md-6">
                    <label for="validationDefault02" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" type="text" class="form-control" id="validationDefault02" required="">
                </div>
                <!-- button -->
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Xác nhận</button>
                </div>
            </form>
        </div>
    </div> 
</div>



