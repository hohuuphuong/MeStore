@model MeShop.Models.Discount

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="py-3 d-flex align-items-sm-center flex-sm-row flex-column">
    <div class="flex-grow-1">
        <h4 class="fs-18 fw-semibold m-0">Thay đổi mã giảm giá</h4>
    </div>

    <div class="text-end">
        <ol class="breadcrumb m-0 py-0">
            <li class="breadcrumb-item"><a asp-area="admin" asp-controller="discounts" asp-action="index">Mã giảm giá</a></li>
            <li class="breadcrumb-item active">Thay đổi mã giảm giá</li>
        </ol>
    </div>
</div>


<div class="col-12">
    <div class="card">
        <div class="card-body">
            <form asp-action="edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3 w-50">
                    <label for="name" class="form-label fw-bold">Tên mã giảm giá</label>
                    <input asp-for="Name" type="text" class="form-control" id="name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 w-50">
                    <label for="Discount_Percent" class="form-label fw-bold">Giá giảm(%)</label>
                    <input asp-for="Discount_Percent" type="number" class="form-control" id="Discount_Percent" min="1" max="100" oninput="validateDiscount(this)">
                    <span asp-validation-for="Discount_Percent" class="text-danger"></span>
                </div>
                <div class="mb-3 w-50">
                    <label for="textarea" class="form-label fw-bold">Mô tả</label>
                    <textarea asp-for="Desc" class="form-control" id="textarea" rows="5" spellcheck="false"></textarea>
                    <span asp-validation-for="Discount_Percent" class="text-danger"></span>
                </div>
                <div class="mb-3 w-25">
                    <div class="form-check form-switch mb-2">
                        @if (Model.Active)
                        {
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked="checked" asp-for="Active">
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="Active">
                        }
                        <label class="form-check-label" for="flexSwitchCheckChecked">Trạng thái</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
        </div>
    </div>
</div>
<script>
    function validateDiscount(input) {
        let value = parseInt(input.value);
        if (value < 1) {
            input.value = 1;
        } else if (value > 100) {
            input.value = 100;
        }
    }
</script>
