@model MeShop.Models.Product_Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="py-3 d-flex align-items-sm-center flex-sm-row flex-column">
    <div class="flex-grow-1">
        <h4 class="fs-18 fw-semibold m-0">Sửa danh mục</h4>
    </div>

    <div class="text-end">
        <ol class="breadcrumb m-0 py-0">
            <li class="breadcrumb-item"><a asp-area="admin" asp-controller="products" asp-action="index">Danh mục</a></li>
            <li class="breadcrumb-item active">Sửa danh mục</li>
        </ol>
    </div>
</div>

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3 w-50">
                    <label for="name" class="form-label fw-bold">Tên danh mục</label>
                    <input asp-for="Name" type="text" class="form-control" id="name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3 w-50">
                    <label for="textarea" class="form-label fw-bold">Mô tả</label>
                    <textarea asp-for="Desc" class="form-control" id="textarea" rows="5" spellcheck="false"></textarea>
                    <span asp-validation-for="Desc" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Xác nhận</button>
            </form>
        </div>
    </div>
</div>



