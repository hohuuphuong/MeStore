@model Order
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="py-3 d-flex align-items-sm-center flex-sm-row flex-column">
    <div class="flex-grow-1">
        <h4 class="fs-18 fw-semibold m-0">Chi tiết đơn hàng</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="panel-body">
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="float-start mt-3">
                                <address>
                                    <strong>Địa chỉ</strong><br>
                                    @Model.Address_Ward<br>
                                    @Model.Address_District<br>
                                    @Model.Address_City<br>
                                    @Model.Address_Detail<br>
                                    <abbr title="Phone">SĐT:</abbr> @Model.Phone
                                </address>
                            </div>
                            <div class="float-end mt-3">
                                <p class="mb-0"><strong>Ngày đặt: </strong> @Model.Created_At.ToString("dd/mm/yyyy")</p>
                                <p class="mt-2 mb-0"><strong>Mã đơn hàng: </strong> #@Model.Id</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table mt-4 mb-4 table-centered table-hover table-borderless">
                                    <thead>
                                        <tr>
                                            <th>Mã sản phẩm</th>
                                            <th>Số lượng</th>
                                            <th>Đơn giá</th>
                                            <th>Tổng tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model.Orders_Detail)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Quantity</td>
                                                <td>@String.Format("{0:N0}", item.Unit_Price)</td>
                                                <td>@String.Format("{0:N0}", item.Quantity * item.Unit_Price)</td>
                                            </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-12">
                            <hr>
                            <h4 class="text-end fw-semibold fs-22">@String.Format("{0:N0}", Model.Total) VND</h4>
                        </div>
                    </div>
                    <hr>
                    <div class="d-print-none">
                        <div class="float-end">
                            <a href="javascript:window.print()" class="btn btn-dark border-0"><i class="mdi mdi-printer me-1"></i>Print</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
