@model IEnumerable<MeShop.Models.ViewModels.BlogVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="py-3 d-flex align-items-sm-center flex-sm-row flex-column">
    <div class="flex-grow-1">
        <h4 class="fs-18 fw-semibold m-0">Danh sách tin tức</h4>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div id="fixed-header-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <div id="fixed-header-datatable_filter" class="dataTables_filter">
                                <a asp-area="admin" asp-controller="blogs" asp-action="create"><button type="button" class="btn btn-primary"><i class="mdi mdi-plus"></i> Tin tức</button></a>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="fixed-header-datatable" class="table table-striped dt-responsive nowrap table-striped w-100 dataTable no-footer dtr-inline" aria-describedby="fixed-header-datatable_info" style="width: 1264px;">
                                <thead>
                                    <tr>
                                        <th tabindex="0" rowspan="1" colspan="1" style="width: 20px;">Id</th>
                                        <th tabindex="0" rowspan="1" colspan="1" style="width: 250px;">Tiêu đề</th>
                                        <th tabindex="0" rowspan="1" colspan="1" style="width: 250px;">Ảnh</th>
                                        <th tabindex="0" rowspan="1" colspan="1" style="width: 200px;">Ngày tạo</th>
                                        <th tabindex="0" rowspan="1" colspan="1" style="width: 50px;">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="even">   
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Title</td>
                                            <td><img src="@Url.Content(item.ImagePath)" alt="Chưa cập nhật" class="img-fluid rounded avatar-sm" /></td>
                                            <td>@item.Created_At</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" style="color: inherit;">
                                                    <i class="mdi mdi-tag-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" style="color: inherit;">
                                                    <i class="mdi mdi-trash-can-outline"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>